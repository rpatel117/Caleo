{
  "manifest_version": 3,
  "name": "Caleo",
  "version": "1.0",
  "background": {
    "service_worker": "background.js"
  },
  "description": "A Chrome Extension built with React.",
  "permissions": [
    "identity",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/caleo.png"
    }
  },
  "icons": {
    "16": "assets/caleo.png"
  },
  "oauth2": {
    "client_id": "685173837261-trqqgn9lkr4ud2jun4irdrtdohgoul8u.apps.googleusercontent.com",
    "scopes": ["openid", "email", "profile"]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
